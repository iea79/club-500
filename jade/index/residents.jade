mixin item()
    .residents__picture(data-modal-id="residents-modal-"+item+"")

        img(src='img/resident.jpg' class='residents__img' alt='Дмитрий Белорусов')

    .residents__content

        .residents__name Дмитрий Белорусов

        .residents__post Сооснователь международного<br>интернет-холдинга Social Discovery Ventures

.residents(data-scroll-section="")

    .residents__circle-one(data-scroll="" data-scroll-speed="1")
    .residents__circle-two(data-scroll="" data-scroll-speed="3")
    .residents__circle-three(data-scroll="" data-scroll-speed="5")
    .residents__circle-four(data-scroll="" data-scroll-speed="2")
    .residents__circle-five(data-scroll="")
    .residents__circle-six(data-scroll="")
    .residents__circle-seven(data-scroll="")
    .residents__circle-eight(data-scroll="")
    .residents__circle-nine(data-scroll="")

    .residents__head

        .residents__title(
            data-scroll="" 
            data-scroll-class="slideRight" 
            data-scroll-offset="10%" 
            ) Резиденты

        .residents__titlesub(
            data-scroll="" 
            data-scroll-class="slideLeft" 
            data-scroll-offset="10%" 
            ) club 500

    .residents__set

        - residents = [1, 2, '', '', 5, '', 7, 8, 9, 10, '', 12, 13, '', 15, '', 17, 18, '', 19, 20, '', 22, 23, 24, 25, '', 27, '', 29];

        each item, i in residents

            if i%2
                .residents__box(
                    data-scroll="" 
                    data-scroll-class="slideUp" 
                    data-scroll-offset="20%" 
                    )

                    if item !== ''
                        +item()

            else
                .residents__box(
                    data-scroll="" 
                    data-scroll-class="slideUp" 
                    data-scroll-offset="10%" 
                    )

                    if item !== ''
                        +item()
